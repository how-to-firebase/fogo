{
  "name": "@quiver/fogo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --template template.html --no-prerender",
    "serve": "preact build --template template.html --no-prerender && preact serve",
    "dev": "preact watch --template template.html",
    "test": "cd functions && NODE_ENV=test jest",
    "test:watch": "cd functions && NODE_ENV=test jest --watch",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "preact-cli": "^2.0.0"
  },
  "dependencies": {
    "node-sass": "^4.7.2",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.3.2",
    "preact-router": "^2.6.0",
    "sass-loader": "^6.0.6",
    "unistore": "^2.4.0"
  }
}
